package repeticao;

import javax.swing.JOptionPane;

public class ExemploDo {

	public static void main(String[] args) {
		/*
		 * char = armazenar 1 caracter ( ''
		 * String - armazenar todo caracter ( "")
		 * Tipos primitivos inicia com letra minuscula
		 */
		
		int valor1=Integer.parseInt(JOptionPane.showInputDialog("Valor 1"));
		int valor2=Integer.parseInt(JOptionPane.showInputDialog("Valor 2"));
		
		char opcao = JOptionPane.showInputDialog("Digite o operador aritmétrico").charAt(0);
		
		if (opcao== '+') {
			System.out.println("Soma: " + (valor1+valor2));
		} else if {
			System.out.println("Subtração: " + (valor1-valor2));
		} else if {
			System.out.println("Multiplicação: " + (valor1*valor2));
		} else  {
			System.out.println("Divisão: " + (valor1/valor2));
		} 
		
		

	}

}
